{
  "manifest_version": 2,
  "name": "Pluslack",
  "short_name": "pluslack",
  "description": "Pluslack gives you customization options to Slack",
  "author": "mogita",
  "icons": {
    "128": "icon128.png"
  },
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["main.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["declarativeContent", "storage"]
}
